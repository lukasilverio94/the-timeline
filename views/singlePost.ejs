<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include('./partials/head.ejs') %>

  <body>
    <div
      class="container d-flex align-items-center justify-content-center mt-3"
    >
      <% if (post) { %>
      <div>
        <h5>Post:</h5>
        <p class="fs-5"><%= post.post %></p>
        <small class="fst-italic"
          ><span class="fw-semibold text-muted">Posted on:</span> <%= post.date
          %></small
        >
        <!-- Comment Form -->
        <form
          action="/posts/new-comment/<%= post._id %>"
          method="post"
          class="mt-2"
        >
          <input
            type="hidden"
            name="postId"
            value="<%= post._id %>"
            class="form-control"
          />
          <textarea
            name="commentText"
            class="form-control w-100 mb-2"
            placeholder="Add your comment"
            style="height: 130px"
          ></textarea>
          <div>
            <button type="submit" class="btn btn-success">Add Comment</button>
            <a href="/" class="btn btn-secondary">Cancel</a>
            <% if (err) { %>
            <p id="errorMessage" class="mt-2 text-danger"><%= err %></p>
            <script>
              setTimeout(function () {
                let errorMessage = document.getElementById("errorMessage");
                if (errorMessage) {
                  errorMessage.style.display = "none";
                }
              }, 2000);
            </script>
            <% } %>
          </div>
        </form>
      </div>
      <% } else { %>
      <p>No post available</p>
      <% } %>
    </div>
  </body>
</html>
