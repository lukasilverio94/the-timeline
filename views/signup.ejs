<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- local css -->
    <link rel="stylesheet" href="/styles.css" />
    <title>Sign Up</title>
  </head>

  <!-- MAKE HEAD DYNAMIC WITH PARTIALS LATER!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!! -->
  <body>
    <!-- Header -->
    <%- include('./partials/mainHeader.ejs') %>
    <!-- SIGN UP FORM -->
    <div class="row container mt-3 ms-auto">
      <div class="col-md-6">
        <h2>Sign up</h2>
        <form action="/signup" method="post" style="width: 280px">
          <div class="mb-3">
            <label for="userName" class="form-label">Username</label>
            <input
              type="text"
              class="form-control"
              id="username"
              name="userName"
            />
          </div>
          <% if(err){ %>
          <p class="text-danger"><%= err.userName %></p>
          <% }%>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" />
            <% if(err){ %>
            <p class="text-danger"><%= err.email %></p>
            <% }%>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              type="password"
              class="form-control"
              id="password"
            />
            <% if(err){ %>
            <p class="text-danger"><%= err.password %></p>
            <% }%>
          </div>
          <button class="btn btn-primary">Sign up</button>
        </form>
        <!-- Handling Error From Sign Up -->
      </div>
      <!-- LOG IN FORM -->
      <div class="col-md-6">
        <h2>Log In</h2>
        <form action="/login" method="get" style="width: 280px">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              name="password"
              type="password"
              class="form-control"
              id="password"
            />
          </div>
          <button class="btn btn-primary">Log In</button>
        </form>
        <!-- Handling Error LOGIN -->
      </div>
    </div>
  </body>
</html>
